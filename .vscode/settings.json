{
    "files.exclude": {
        ".venv": true,
        "**/__pycache__": true,
    },
    "[python]": {
        "editor.formatOnSaveMode": "file",
        "editor.defaultFormatter": "eeyore.yapf",
        "editor.formatOnSave": true,
        "editor.formatOnType": false
    },
    "yapf.args": ["--style", "{based_on_style: google, COLUMN_LIMIT: 120, SPLIT_ARGUMENTS_WHEN_COMMA_TERMINATED: False, SPLIT_BEFORE_EXPRESSION_AFTER_OPENING_PAREN: False, SPLIT_BEFORE_FIRST_ARGUMENT: True}"],
    "pylint.args": [
        "--max-line-length=1000",
        "--disable=too-many-branches",
        "--disable=too-many-statements",
        "--disable=too-many-arguments",
        "--disable=too-many-instance-attributes",
        "--disable=too-few-public-methods",
        "--disable=missing-module-docstring",
        "--disable=missing-class-docstring",
        "--disable=missing-function-docstring",
        "--disable=broad-except",
        "--disable=global-statement",
        "--disable=C0103",
    ]
}